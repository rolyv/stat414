    \end{enumerate}
    
    Section 1.5
    \begin{enumerate}
     \addtocounter{enumi}{1}
     
     %2
     \item 
      \begin{enumerate}
       \item $P(G) = P((G \cap A) \cup (G \cap B)) = P(G|A)P(A) + P(G|B)P(B) 
       = .85\cdot.4 + .75\cdot.6 = 0.79$
       \item $P(A|G) = \dfrac{P(G|A)P(A)}{P(G)} = \dfrac{.85\cdot.4}{.79} = .4304$
      \end{enumerate}
      
     %3
     \item 
